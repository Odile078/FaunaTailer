{{#partial "content"}}

    <div class="container">
        <div class="jumbotron jumbotron1">
            <div class="row">

                    {{#if animals}}

                        {{#each animals as |a|}}
                        <div class="col-md-4">

                            <div class="card   " >
                                <div class="card-body cardback">
                                    <h5 class="card-title">{{a.name}}</h5>
                                    <p class="card-text">{{a.type}}</p>
                                    <p class="card-text">{{a.health}}</p>
                                    <p class="card-text">{{a.age}}</p>

                                </div>
                            </div> </div>

                        {{/each}}
                    {{else}}
                        <h2>There are no registered animals, register here <a href="/create/animal">here</a></h2>

                    {{/if}}


            </div>
        </div>

    </div>


{{/partial}}
{{> layout.hbs}}