{{#partial "content"}}
    <div class="container">
        <div class="jumbotron jumbotron1">
            <div class="row">
                <div class="col-md-4 sighting">

                </div>
                <div class="col-md-6">
                    <form action="/create/sighting/new" method="post">
                        <h1 class="text">Register Sighting</h1>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label  for="health">Ranger</label>
                                </div>
                                <div class="form-group">
                                    <select class="selector" id="ranger" name="ranger">
                                        <option selected>Choose the ranger</option>
                                        {{#if rangers}}

                                            {{#each rangers as |r|}}
                                                <option name="animal" value={{r.id}}>{{r.name}}</option>
                                            {{/each}}
                                        {{/if}}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label  for="health">Animal</label>
                                </div>
                                <div class="form-group">
                                    <select class="selector" id="animal" name="animal">
                                        <option selected>Choose the animal</option>
                                        {{#if animals}}

                                            {{#each animals as |a|}}
                                                <option name="animal" value={{a.id}}>{{a.name}}</option>
                                            {{/each}}
                                        {{/if}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label  for="health">Locatioin</label>
                                </div>
                                <div class="form-group">
                                    <select class="selector" id="location" name="location">
                                        <option selected>Choose the location</option>
                                        {{#if locations}}

                                            {{#each locations as |l|}}
                                                <option name="location" value={{l.id}}>{{l.name}}</option>
                                            {{/each}}
                                        {{/if}}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"></div>
                            <div class="col-md-6"></div>
                        </div>



                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-info "> Register </button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>


{{/partial}}
{{> layout.hbs}}